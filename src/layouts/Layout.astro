---
const { title } = Astro.props;
import "../styles/global.css";
const currentPath = Astro.url.pathname;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/png"
      href={`${import.meta.env.BASE_URL}osodreamer.png`}
    />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-950 text-white font-sans min-h-screen flex">
    <div class="flex flex-1 min-h-screen w-full">
      <!-- Sidebar -->
      <aside
        id="menu-sidebar"
        class="fixed md:sticky top-0 left-0 z-50 w-80 h-screen bg-zinc-900 border-r border-zinc-800 p-6 transform md:translate-x-0 -translate-x-full transition-transform duration-300"
      >
        <div class="flex justify-between items-center mb-6 md:block gap-4">
          <div class="flex items-center">
            <img
              src="/osodreamer-sri-xml-signer-docs/osodreamer.png"
              alt="osodreamer logo"
              class="w-12 h-20 object-contain mt-4"
            />
            <h1 class="text-2xl font-extrabold tracking-tight text-indigo-400">
              osodreamer
            </h1>
          </div>
          <button
            id="close-sidebar"
            class="md:hidden text-zinc-400 hover:text-white text-xl"
            aria-label="Cerrar menú"
          >
            ✕
          </button>
        </div>

        <nav class="flex flex-col gap-2 text-sm text-zinc-300">
          <a
            href="/osodreamer-sri-xml-signer-docs/docs"
            class={`px-3 py-2 rounded-lg transition-colors hover:bg-zinc-800 ${currentPath === "/osodreamer-sri-xml-signer-docs/docs" ? "bg-zinc-800 text-white font-medium" : ""}`}
          >
            Introducción
          </a>
          <a
            href="/osodreamer-sri-xml-signer-docs/docs/generar"
            class={`px-3 py-2 rounded-lg transition-colors hover:bg-zinc-800 ${currentPath === "/osodreamer-sri-xml-signer-docs/docs/generar" ? "bg-zinc-800 text-white font-medium" : ""}`}
          >
            Generador XML
          </a>
          <a
            href="/osodreamer-sri-xml-signer-docs/docs/firmador"
            class={`px-3 py-2 rounded-lg transition-colors hover:bg-zinc-800 ${currentPath === "/osodreamer-sri-xml-signer-docs/docs/firmador" ? "bg-zinc-800 text-white font-medium" : ""}`}
          >
            Firmador
          </a>
          <a
            href="/osodreamer-sri-xml-signer-docs/docs/validador"
            class={`px-3 py-2 rounded-lg transition-colors hover:bg-zinc-800 ${currentPath === "/osodreamer-sri-xml-signer-docs/docs/validador" ? "bg-zinc-800 text-white font-medium" : ""}`}
          >
            Validador
          </a>
          <a
            href="/osodreamer-sri-xml-signer-docs/docs/autorizador"
            class={`px-3 py-2 rounded-lg transition-colors hover:bg-zinc-800 ${currentPath === "/osodreamer-sri-xml-signer-docs/docs/autorizador" ? "bg-zinc-800 text-white font-medium" : ""}`}
          >
            Autorizador
          </a>

          <!-- Submenú modelo de datos -->
          <div class="group">
            <button
              type="button"
              class={`w-full flex justify-between items-center px-3 py-2 rounded-lg transition-colors hover:bg-zinc-800 ${
                currentPath.startsWith(
                  "/osodreamer-sri-xml-signer-docs/docs/modelo-datos"
                )
                  ? "bg-zinc-800 text-white font-medium"
                  : "text-zinc-300"
              }`}
              data-toggle="submenu"
              data-target="#submenu-modelo"
            >
              <span>Modelo de datos</span>
              <svg
                class="w-4 h-4 transition-transform data-[open=true]:rotate-90"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </button>

            <div
              id="submenu-modelo"
              class="ml-4 mt-1 overflow-hidden transition-all duration-300 max-h-0 data-[open=true]:max-h-40 flex flex-col gap-1"
              data-open="false"
            >
              <a
                href="/osodreamer-sri-xml-signer-docs/docs/modelo-datos/factura"
                class={`px-3 py-1.5 rounded-md transition-colors hover:bg-zinc-800 ${
                  currentPath ===
                  "/osodreamer-sri-xml-signer-docs/docs/modelo-datos/factura"
                    ? "bg-zinc-800 text-white font-medium"
                    : "text-zinc-400"
                }`}
              >
                Generador
              </a>
              <a
                href="/osodreamer-sri-xml-signer-docs/docs/modelo-datos/firmador"
                class={`px-3 py-1.5 rounded-md transition-colors hover:bg-zinc-800 ${
                  currentPath ===
                  "/osodreamer-sri-xml-signer-docs/docs/modelo-datos/firmador"
                    ? "bg-zinc-800 text-white font-medium"
                    : "text-zinc-400"
                }`}
              >
                Firmador
              </a>
              <a
                href="/osodreamer-sri-xml-signer-docs/docs/modelo-datos/validador"
                class={`px-3 py-1.5 rounded-md transition-colors hover:bg-zinc-800 ${
                  currentPath ===
                  "/osodreamer-sri-xml-signer-docs/docs/modelo-datos/validador"
                    ? "bg-zinc-800 text-white font-medium"
                    : "text-zinc-400"
                }`}
              >
                Validador
              </a>
              <a
                href="/osodreamer-sri-xml-signer-docs/docs/modelo-datos/autorizador"
                class={`px-3 py-1.5 rounded-md transition-colors hover:bg-zinc-800 ${
                  currentPath ===
                  "/osodreamer-sri-xml-signer-docs/docs/modelo-datos/autorizador"
                    ? "bg-zinc-800 text-white font-medium"
                    : "text-zinc-400"
                }`}
              >
                Autorizador
              </a>
            </div>
          </div>

          <!-- Submenú modelo de datos -->
          <div class="group">
            <button
              type="button"
              class={`w-full flex justify-between items-center px-3 py-2 rounded-lg transition-colors hover:bg-zinc-800 ${
                currentPath.startsWith(
                  "/osodreamer-sri-xml-signer-docs/docs/ejemplos/factura/node-ts"
                )
                  ? "bg-zinc-800 text-white font-medium"
                  : "text-zinc-300"
              }`}
              data-toggle="submenu"
              data-target="#submenu-ejemplos"
            >
              <span>Ejemplos</span>
              <svg
                class="w-4 h-4 transition-transform data-[open=true]:rotate-90"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </button>

            <div
              id="submenu-ejemplos"
              class="ml-4 mt-1 overflow-hidden transition-all duration-300 max-h-0 data-[open=true]:max-h-40 flex flex-col gap-1"
              data-open="false"
            >
              <a
                href="/osodreamer-sri-xml-signer-docs/docs/ejemplos/factura/node-ts"
                class={`px-3 py-1.5 rounded-md transition-colors hover:bg-zinc-800 ${
                  currentPath ===
                  "/osodreamer-sri-xml-signer-docs/docs/ejemplos/factura/node-ts"
                    ? "bg-zinc-800 text-white font-medium"
                    : "text-zinc-400"
                }`}
              >
                Node TS
              </a>
            </div>
          </div>
        </nav>
      </aside>

      <!-- Overlay móvil -->
      <div
        id="menu-overlay"
        class="fixed inset-0 z-40 hidden bg-black/30 backdrop-blur-sm transition-opacity duration-300 md:hidden"
      >
      </div>

      <!-- Contenido principal -->
      <main
        class="flex flex-col flex-1 min-h-screen px-4 pt-6 pb-10 sm:px-6 md:px-8 xl:px-10 max-w-full overflow-x-hidden"
      >
        <!-- Navbar móvil -->
        <div
          class="md:hidden flex justify-between items-center sticky top-0 z-30 bg-zinc-950 py-4 px-2 border-b border-zinc-800"
        >
          <h1 class="text-lg font-bold text-white">{title}</h1>
          <button
            id="open-sidebar"
            class="text-zinc-400 hover:text-white"
            aria-label="Abrir menú"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Contenido dinámico -->
        <slot />

        <!-- Footer -->
        <footer
          class="mt-auto border-t border-zinc-800 pt-6 px-4 text-sm text-zinc-500 bg-zinc-950"
        >
          <div
            class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4"
          >
            <div class="text-center md:text-left">
              <span class="font-semibold text-indigo-400">osodreamer</span> — herramientas
              para el ecosistema SRI en Ecuador.
            </div>
            <div class="flex gap-4 text-zinc-400 text-sm">
              <a
                href="https://github.com/YueYuuta/osodreamer-sri-xml-signer"
                target="_blank"
                rel="noopener"
                class="hover:text-white transition">GitHub</a
              >
              <a
                href="/osodreamer-sri-xml-signer-docs/docs"
                class="hover:text-white transition">Documentación</a
              >
              <a
                href="mailto:osodreamer2023@gmail.com"
                class="hover:text-white transition">Contacto</a
              >
            </div>
          </div>
          <div class="text-center text-xs mt-4 text-zinc-600">
            © {new Date().getFullYear()} osodreamer — Hecho con ❤️ en Ecuador.
          </div>
        </footer>
      </main>
    </div>

    <!-- Script interactividad -->
    <script>
      const openBtn = document.getElementById("open-sidebar");
      const closeBtn = document.getElementById("close-sidebar");
      const sidebar = document.getElementById("menu-sidebar");
      const overlay = document.getElementById("menu-overlay");

      openBtn?.addEventListener("click", () => {
        sidebar?.classList.remove("-translate-x-full");
        overlay?.classList.remove("hidden");
        overlay?.classList.add("opacity-100");
        document.body.style.overflow = "hidden";
      });

      const closeMenu = () => {
        sidebar?.classList.add("-translate-x-full");
        overlay?.classList.add("hidden");
        document.body.style.overflow = "";
      };

      closeBtn?.addEventListener("click", closeMenu);
      overlay?.addEventListener("click", closeMenu);

      // Submenú
      document.querySelectorAll('[data-toggle="submenu"]').forEach((button) => {
        const targetId = button.getAttribute("data-target");
        const submenu = document.querySelector(targetId!);
        const icon = button.querySelector("svg");

        button.addEventListener("click", () => {
          const isOpen = submenu?.getAttribute("data-open") === "true";
          submenu?.setAttribute("data-open", String(!isOpen));
          icon?.setAttribute("data-open", String(!isOpen));
        });
      });
    </script>
  </body>
</html>
